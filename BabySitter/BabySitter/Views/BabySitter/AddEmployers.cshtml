
@model BabySitter.Models.AddNewEmployerViewModel
@{
    ViewBag.Title = "Add Employers";
    Layout = "~/Views/Shared/BabySitterDefaultlayout.cshtml";
}

<h2 class="ViewEmp">Add a new employer</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4 settingUptheForm">
        @using (Html.BeginForm("AddingNewEmployer","BabySitter"))
        {
            <div class="form-group">
                <label for="EmployerName" class="empLabel">Employer's name</label>
                @Html.TextBoxFor(m => m.EmployerName, new{ @class="form-control"})
                @Html.ValidationMessageFor(m => m.EmployerName)
            </div>
            <div class="form-group">                
                <label for="EmployerAddress" class="empLabel">Employer's Address</label>
                @Html.TextBoxFor(m => m.EmployerAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmployerAddress)
            </div>
            <div class="form-group">
               
                <label for="EmployerCellNumber" class="empLabel">Employer's cell number</label>
                @Html.TextBoxFor(m => m.EmployerCellNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmployerCellNumber)
            </div>
            
            <div class="form-group">
                    <label for="EmergContName" class="empLabel">Emergency contact's name</label>
                    @Html.TextBoxFor(m => m.EmergContName, new { @class = "form-control" })
                
                @Html.ValidationMessageFor(m => m.EmergContName)
                </div>
                <div class="form-group">
                    <label for="EmergContCellNumber" class="empLabel">Emergency contact's cell number</label>
                    @Html.TextBoxFor(m => m.EmergContCellnumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EmergContCellnumber)
                </div>
                <div class="form-group">
                    <label for="EmerContRelation" class="empLabel">Emergency contact's relation with employer</label>
                    @Html.TextBoxFor(m => m.EmerContRelation, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EmerContRelation)
                </div>
               
            <div>
                <button type="submit"  class="newEmpButton">Next</button>
            </div>
            
        }
       
        
        

    </div>
</div>

